<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="180dp" />
            <stroke android:color="@android:color/white" />
            <gradient android:angle="-90" android:endColor="@android:color/holo_green_dark" android:startColor="@android:color/holo_green_dark" android:type="linear" />
            <solid android:color="@android:color/holo_green_light" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <padding android:bottom="25dp" android:left="25dp" android:right="25dp" android:top="25dp" />
            <corners android:radius="180dp" />
            <stroke android:width="1dp" android:color="@android:color/holo_green_dark" />
            <solid android:color="@android:color/holo_green_dark" />
        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/black"
    android:gravity="center"
    android:padding="25dp">

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="center"
        android:weightSum="3">

        <EditText
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Name"
            android:textColorHint="@android:color/white"
            android:textColor="@color/lilac"
            android:gravity="center"
            android:textSize="25dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="25dp"
            android:background="@drawable/round_edit_text"/>

        <EditText
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Phone"
            android:textColorHint="@android:color/white"
            android:textColor="@color/lilac"
            android:gravity="center"
            android:textSize="25dp"
            android:inputType="phone"
            android:background="@drawable/round_edit_text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/timer_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/winkle"
            android:gravity="center"
            android:textSize="35dp"
            android:text="00:00"
            android:background="@drawable/round_edit_text"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:id="@+id/layout_timer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.75"
            android:weightSum="2"
            android:gravity="center">

            <EditText
                android:id="@+id/timer_hour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Hours"
                android:textColorHint="@android:color/white"
                android:textColor="@color/orange"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:background="@drawable/round_edit_text"/>

            <EditText
                android:id="@+id/timer_minute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Minutes"
                android:inputType="number"
                android:textColorHint="@android:color/white"
                android:textColor="@color/candy"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/round_edit_text"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_control"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:id="@+id/timer_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:layout_marginRight="25dp"
                android:text="Start"
                android:onClick="StartTimer"/>

            <Button
                android:id="@+id/timer_stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:text="Stop"
                android:onClick="StopTimer"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>